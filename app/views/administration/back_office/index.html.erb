<main class="content">
  <div class="container-fluid p-0">

    <h1 class="h3 mb-3">Users</h1>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Send an email</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= user.email %>
                  </td>
                  <td>
                    <%= link_to 'Email this user', administration_backoffice_new_path(user.id) %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>

  </div>
</main>
